<script>
    function showRegistrationPopup() {
      // create a new div element to contain the popup content
      const popup = document.createElement('div');
      popup.classList.add('popup');
      
      // create a message element to display the success message
      const message = document.createElement('p');
      message.textContent = 'Your registration was successful!';
    
      // add the message element to the popup div
      popup.appendChild(message);
    
      // add the popup div to the page body
      document.body.appendChild(popup);
    
      // set a timeout to remove the popup after a certain amount of time
      setTimeout(function() {
        document.body.removeChild(popup);
      }, 10000); // popup will disappear after 3 seconds (3000 milliseconds)
    }
  
    // call the showRegistrationPopup() function when the page loads
    window.onload = function() {
      showRegistrationPopup();
    }
  </script>
  
</html>

